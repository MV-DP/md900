                   <splash-font>
                    <red>0.25</red>
                    <green>0.28</green>
                    <blue>0.31</blue>
                   </splash-font>
                   <splash-screen>
                    <red>0.363</red>
                    <green>0.476</green>
                    <blue>0.671</blue>
                   </splash-screen>
                  </colors>
