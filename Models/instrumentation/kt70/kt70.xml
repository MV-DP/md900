  <animation>
    <type>rotate</type>
    <object-name>knob0</object-name>
    <property>instrumentation/kt-70/inputs/func-knob</property>
    <factor>30</factor>
    <offset-deg>-90</offset-deg>
    <center>
      <x-m> 0</x-m>
